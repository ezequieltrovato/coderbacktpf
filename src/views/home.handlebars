<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Productos</title>
    <link rel="stylesheet" href="/path/to/your/css/styles.css">
</head>
<body>
    <h1>Lista de Productos</h1>
    <div id="product-list">
        {{#each payload}}
        <div class="product">
            <h2>{{this.name}}</h2>
            <p>Precio: ${{this.price}}</p>
            <p>Categoría: {{this.category}}</p>
            <p>Disponibilidad: {{#if this.available}}Disponible{{else}}No disponible{{/if}}</p>
            <a href="/products/{{this._id}}">Ver detalles</a>
            <button onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
        </div>
        {{/each}}
    </div>

    <div id="pagination">
        {{#if hasPrevPage}}
            <a href="{{prevLink}}">Página Anterior</a>
        {{/if}}
        <span>Página {{page}} de {{totalPages}}</span>
        {{#if hasNextPage}}
            <a href="{{nextLink}}">Página Siguiente</a>
        {{/if}}
    </div>

    <script src="/path/to/your/js/scripts.js"></script>
</body>
</html>
